<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/labelPulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulse:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valuePulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="90"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/labelRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Range:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valueRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Weight Maintenance"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/valueDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warm-up and low intensity activity"
        android:textStyle="italic"
        android:textSize="14sp"
        android:paddingBottom="12dp" />

</LinearLayout>
